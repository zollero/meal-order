doctype html
html
    head
        title= title
        meta(name='viewport', content='width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='icon', type='image/ico', href='/favicon.ico')
        link(rel='shortcut icon', type='image/ico', href='/favicon.ico')
        link(rel='bookmark', type='image/ico', href='/favicon.ico')
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/eden.css')
    body

        include templates/page-header

        div(class='container' style='margin-top: 42px;')
            div(class='page-header')
                div(class='row')
                    div(class='col-sm-12 col-xs-12')
                        ul(class='breadcrumb')
                            li
                                a(href='/team') 团队
                            li 创建团队

                        .col-sm-12.col-xs-12.well
                            form.form-horizontal#add-team-form
                                fieldset
                                    legend 新团队
                                    .form-group
                                        label.col-sm-2.col-xs-3.control-label(for='team-name') 团队名
                                        .col-sm-10.col-xs-9
                                            input#team-name(class='form-control' name='teamName' type='text' placeholder='团队名')
                                    .form-group
                                        label.col-sm-2.col-xs-3.control-label(for='team-desc') 团队说明
                                        .col-sm-10.col-xs-9
                                            textarea#team-desc(class='form-control' rows='3' style='resize:none;' name='teamDesc' type='text' placeholder='团队说明')
                                    .form-group
                                        label.col-sm-2.col-xs-3.control-label(for='team-member') 成员
                                        .col-sm-10.col-xs-9
                                            input#team-member(class='form-control' name='members' type='text' placeholder='请搜索添加新成员')
                                    .form-group
                                        label.col-sm-2.col-xs-3.control-label(for='team-menu') 菜单
                                        .col-sm-10.col-xs-9
                                            input#team-menu(class='form-control' name='menus' type='text' placeholder='请添加关联菜单')

                                    .form-group
                                        .col-xs-12.col-sm-12.text-center
                                            button(type='button' id='submit-btn' class='btn btn-primary btn-sm' data-loading-text="加载中..." autocomplete="off") 提交
                                            | &nbsp;&nbsp;
                                            button(type='reset' id='reset-btn' class='btn btn-default btn-sm' data-loading-text="加载中..." autocomplete="off") 重置

        .modal.bs-example-modal-sm(tabindex='-1' id='message-modal' role='dialog' aria-hidden='true' data-backdrop='static')
            .modal-dialog.modal-sm
                .panel.panel-success
                    .panel-heading
                        h3.panel-title 菜单创建成功
                    .modal-body.text-center
                        a.btn.btn-info.btn-sm(type='button' href='/menu') 回到菜单页
                        | &nbsp;&nbsp;
                        button.btn.btn-info.btn-sm(type='button' id='add-more-btn' data-dismiss="modal") 再创建一个


        include templates/page-footer

        script(type='text/javascript' src='/lib/jquery/dist/jquery.min.js')
        script(type='text/javascript' src='/lib/bootstrap/dist/js/bootstrap.min.js')
        script(type='text/javascript' src='/javascripts/team.js')