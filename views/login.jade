doctype html
html
head
    title=title
    meta(name='viewport', content='width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(rel='icon', type='image/ico', href='favicon.ico')
    link(rel='shortcut icon', type='image/ico', href='favicon.ico')
    link(rel='bookmark', type='image/ico', href='/favicon.ico')
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
body
    div(class='top-banner')
        div(class='pos-wrap')
            h1='食'

    div(class='container form-unit')
        form(class='col-sm-offset-4 col-sm-4 form-horizontal', role='form', method='post', action='/user/login')
            fieldset
                legend='登录'
                div(class='form-group')
                    div(class='col-sm-12')
                        input(type='text', autofocus='autofocus' name='name', class='form-control', placeholder='用户名', required)
                div(class='form-group')
                    div(class='col-sm-12')
                        input(type='password', name='password', class='form-control', placeholder='密码', required)
                if (message)
                    div(class='alert alert-danger')=message

                div(class='form-group')
                    div(class='col-sm-12 col-xs-12 text-center')
                        div(class='col-sm-6 col-xs-6')
                            button(type='submit', class='btn modal-title col-sm-12 col-xs-12 btn-danger')='登录'
                        div(class='col-sm-6 col-xs-6')
                            a(type='button', href='./register', class='btn modal-title col-sm-12 col-xs-12 btn-success')='注册'
