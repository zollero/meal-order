doctype html
html
    head
        title= title
        meta(name='viewport', content='width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='icon', type='image/ico', href='favicon.ico')
        link(rel='shortcut icon', type='image/ico', href='favicon.ico')
        link(rel='bookmark', type='image/ico', href='/favicon.ico')
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/eden.css')
    body

        include templates/page-header

        div(class='container' style='margin-top: 42px;')
            div(class='page-header')
                div(class='row')
                    div(class='col-lg-12')

                        if menuList.length > 0
                            h5 你的菜单列表:
                                span.pull-right
                                    a(href='/menu/add') 创建菜单
                            table(class='table table-hover table-striped table-responsive')
                                thead
                                    tr
                                        th 菜单名
                                        th 创建时间
                                        th 操作
                                tbody
                                    each menu in menuList
                                        tr
                                            td=menu.menuName
                                            td=menu.createTime
                                            td
                                                a(href='#') 编辑
                                                | &nbsp;&nbsp;
                                                a(href='#') 删除
                        else
                            .jumbotron
                                span
                                    span(class='glyphicon glyphicon-exclamation-sign text-danger')
                                    | &nbsp;你还没有任何菜单，请创建新的菜单。
                                span
                                    a(href='/menu/add') 创建菜单


        include templates/page-footer

        script(type='text/javascript' src='./lib/jquery/dist/jquery.min.js')
        script(type='text/javascript' src='./lib/bootstrap/dist/js/bootstrap.min.js')
        script(type='text/javascript' src='./lib/angular.js')
